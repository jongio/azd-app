{
  "name": "azd-app-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "validate": "npx tsx scripts/validate-commands.ts",
    "generate:cli": "npx tsx scripts/generate-cli-reference.ts",
    "generate:changelog": "npx tsx scripts/generate-changelog.ts",
    "prebuild": "npm run validate && npm run generate:cli && npm run generate:changelog",
    "build": "astro build && npx pagefind --site dist",
    "preview": "astro preview",
    "screenshots": "npx tsx scripts/capture-screenshots.ts",
    "astro": "astro",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@astrojs/mdx": "^3.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.16.0",
    "astro-expressive-code": "^0.41.3",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.0.0",
    "pagefind": "^1.4.0",
    "playwright": "^1.57.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.0"
  }
}
