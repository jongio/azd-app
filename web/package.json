{
  "name": "azd-app-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "validate": "tsx scripts/validate-commands.ts",
    "generate:cli": "tsx scripts/generate-cli-reference.ts",
    "generate:changelog": "tsx scripts/generate-changelog.ts",
    "prebuild": "pnpm validate && pnpm generate:cli && pnpm generate:changelog",
    "build": "astro build && pagefind --site dist",
    "preview": "astro preview --host 127.0.0.1 --port 4321",
    "screenshots": "tsx scripts/capture-screenshots.ts",
    "astro": "astro",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.12",
    "@tailwindcss/vite": "^4.1.17",
    "astro": "^5.16.3",
    "astro-expressive-code": "^0.41.3",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "pagefind": "^1.4.0",
    "playwright": "^1.57.0",
    "serve": "^14.2.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0"
  }
}
