<script>
  function initPlatformTabs(): void {
    const tabContainers = document.querySelectorAll('.platform-tabs');
    
    tabContainers.forEach((container) => {
      const tabs = container.querySelectorAll<HTMLButtonElement>('.platform-tab');
      const panels = container.querySelectorAll<HTMLDivElement>('.platform-panel');

      function selectTab(selectedTab: HTMLButtonElement): void {
        const platform = selectedTab.dataset.platform;

        // Update tabs
        tabs.forEach((tab) => {
          const isSelected = tab === selectedTab;
          tab.setAttribute('aria-selected', String(isSelected));
          tab.classList.toggle('platform-tab--active', isSelected);
          tab.tabIndex = isSelected ? 0 : -1;
        });

        // Update panels
        panels.forEach((panel) => {
          const isActive = panel.id === `panel-${platform}`;
          panel.classList.toggle('platform-panel--active', isActive);
          panel.hidden = !isActive;
        });
      }

      tabs.forEach((tab) => {
        tab.addEventListener('click', () => selectTab(tab));

        tab.addEventListener('keydown', (e) => {
          const currentIndex = Array.from(tabs).indexOf(tab);
          let newIndex: number | null = null;

          if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
            e.preventDefault();
            newIndex = currentIndex === 0 ? tabs.length - 1 : currentIndex - 1;
          } else if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
            e.preventDefault();
            newIndex = currentIndex === tabs.length - 1 ? 0 : currentIndex + 1;
          } else if (e.key === 'Home') {
            e.preventDefault();
            newIndex = 0;
          } else if (e.key === 'End') {
            e.preventDefault();
            newIndex = tabs.length - 1;
          }

          if (newIndex !== null) {
            const newTab = tabs[newIndex];
            newTab.focus();
            selectTab(newTab);
          }
        });
      });
    });
  }

  // Auto-detect platform
  function detectPlatform(): void {
    const userAgent = navigator.userAgent.toLowerCase();
    let platform: string;

    if (userAgent.includes('win')) {
      platform = 'windows';
    } else if (userAgent.includes('mac')) {
      platform = 'macos';
    } else {
      platform = 'linux';
    }

    const tab = document.querySelector<HTMLButtonElement>(`.platform-tab[data-platform="${platform}"]`);
    if (tab && tab.getAttribute('aria-selected') !== 'true') {
      tab.click();
    }
  }

  // Initialize
  initPlatformTabs();
  detectPlatform();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', () => {
    initPlatformTabs();
    detectPlatform();
  });
</script>
