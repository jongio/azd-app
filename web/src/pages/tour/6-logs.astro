---
/**
 * Tour Step 6: View and filter logs
 */
import TourLayout from '../../components/tour/TourLayout.astro';
import CompletionCheckbox from '../../components/tour/CompletionCheckbox.astro';
import TourNavigation from '../../components/tour/TourNavigation.astro';
import LearnMoreSection from '../../components/tour/LearnMoreSection.astro';
import TryItYourself from '../../components/tour/TryItYourself.astro';
import CodeBlock from '../../components/CodeBlock.astro';
import { tourSteps, getStepByNumber, getPreviousStep, getNextStep } from '../../data/tour-steps';

const step = getStepByNumber(6)!;
const prevStep = getPreviousStep(6);
const nextStep = getNextStep(6);
---

<TourLayout 
  title={step.title}
  description={step.description}
  currentStep={step.number}
>
  <article class="tour-step-page">
    <!-- Step Header -->
    <header class="tour-step-header">
      <nav aria-label="Breadcrumb" class="tour-breadcrumb">
        <a href={`${import.meta.env.BASE_URL}tour/`}>Guided Tour</a>
        <span aria-hidden="true">/</span>
        <span aria-current="page">Step {step.number}</span>
      </nav>
      
      <div class="tour-step-meta">
        <span class="tour-step-icon" aria-hidden="true">{step.icon}</span>
        <span class="tour-step-number">Step {step.number}</span>
      </div>
      
      <h1 class="tour-step-title">{step.title}</h1>
      
      <div class="tour-step-info">
        <span class="tour-step-time">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          ~{step.estimatedTime} minutes
        </span>
      </div>

      <CompletionCheckbox stepNumber={step.number} />
    </header>

    <!-- Step Content -->
    <div class="tour-step-content">
      <p class="tour-step-intro">
        The <code>azd app logs</code> command provides powerful log viewing and filtering
        capabilities for debugging and monitoring your services.
      </p>

      <h2>View All Logs</h2>
      <p>Stream logs from all services in real-time:</p>

      <CodeBlock 
        code="azd app logs"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h2>View Logs for a Specific Service</h2>
      <p>Focus on logs from one service:</p>

      <CodeBlock 
        code="azd app logs --service api"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h2>Filter and Search Logs</h2>

      <h3>Filter by Log Level</h3>
      <p>Show only errors:</p>

      <CodeBlock 
        code="azd app logs --level error"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h3>Time Range</h3>
      <p>Show logs from the last hour:</p>

      <CodeBlock 
        code="azd app logs --since 1h"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h2>Log Output Options</h2>

      <h3>Follow Mode (Default)</h3>
      <p>Continuously stream new logs:</p>

      <CodeBlock 
        code="azd app logs --follow"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h3>Show Timestamps</h3>
      <CodeBlock 
        code="azd app logs --timestamps"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <h3>JSON Output</h3>
      <p>For programmatic parsing:</p>

      <CodeBlock 
        code="azd app logs --format json"
        language="bash"
        showLanguage={true}
        showCopy={true}
      />

      <TryItYourself 
        prompt="Run `azd app logs --service api` to view logs from just the API service. Try `--level error` to filter for errors."
        expectedOutcome="You should see a filtered stream of logs from the specified service."
      />

      <LearnMoreSection id="step6-log-tips" title="Log Tips & Tricks">
        <h3>Combining Filters</h3>
        <p>You can combine multiple filters:</p>
        <CodeBlock 
          code='azd app logs --service api --level error --since 30m'
          language="bash"
          showLanguage={true}
          showCopy={true}
        />

        <h3>Export Logs</h3>
        <p>Save logs to a file for later analysis:</p>
        <CodeBlock 
          code="azd app logs --file logs.txt"
          language="bash"
          showLanguage={true}
          showCopy={true}
        />

        <h3>Dashboard Logs</h3>
        <p>
          The dashboard also provides a log viewer with real-time filtering, 
          search, and syntax highlighting. Access it via the Logs tab.
        </p>
      </LearnMoreSection>
    </div>

    <!-- Navigation -->
    <TourNavigation 
      currentStep={step.number}
      totalSteps={tourSteps.length}
      previousStep={prevStep}
      nextStep={nextStep}
    />
  </article>
</TourLayout>

<style>
  .tour-step-page {
    max-width: 100%;
  }

  .tour-step-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border-default);
  }

  .tour-breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    margin-bottom: 1rem;
  }

  .tour-breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .tour-breadcrumb a:hover {
    color: var(--color-interactive-default);
    text-decoration: underline;
  }

  .tour-step-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .tour-step-icon {
    font-size: 1.5rem;
  }

  .tour-step-number {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-azure-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  [data-theme="dark"] .tour-step-number {
    color: var(--color-azure-400);
  }

  .tour-step-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 1rem;
  }

  .tour-step-info {
    margin-bottom: 1.5rem;
  }

  .tour-step-time {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  .tour-step-content {
    line-height: 1.7;
  }

  .tour-step-content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 2rem 0 1rem;
  }

  .tour-step-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 1.5rem 0 0.75rem;
  }

  .tour-step-content p {
    color: var(--color-text-secondary);
    margin: 0 0 1rem;
  }

  .tour-step-content ul,
  .tour-step-content ol {
    color: var(--color-text-secondary);
    padding-left: 1.5rem;
    margin: 0 0 1rem;
  }

  .tour-step-content li {
    margin: 0.5rem 0;
  }

  .tour-step-intro {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  @media (max-width: 640px) {
    .tour-step-title {
      font-size: 1.5rem;
    }
  }
</style>
