---
/**
 * StepCard Component
 * 
 * Displays a numbered step with title, description, and content.
 * Used in the Quick Start page for each installation step.
 */

interface Props {
  /** Step number (1-4) */
  number: number;
  /** Step title */
  title: string;
  /** Step description */
  description?: string;
  /** Whether this step is currently active */
  isActive?: boolean;
  /** Whether this step is completed */
  isCompleted?: boolean;
  /** ID for anchor linking */
  id?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  number,
  title,
  description,
  isActive = false,
  isCompleted = false,
  id,
  class: className = '',
} = Astro.props;

const stepId = id || `step-${number}`;
---

<article 
  id={stepId}
  class:list={[
    'step-card',
    { 'step-card--active': isActive },
    { 'step-card--completed': isCompleted },
    className,
  ]}
  aria-labelledby={`${stepId}-title`}
>
  <header class="step-card-header">
    <div 
      class="step-card-number"
      aria-label={`Step ${number}`}
    >
      {isCompleted ? (
        <svg 
          width="20" 
          height="20" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="3" 
          stroke-linecap="round" 
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
      ) : (
        <span>{number}</span>
      )}
    </div>
    <h3 id={`${stepId}-title`} class="step-card-title">{title}</h3>
  </header>

  {description && (
    <p class="step-card-description">{description}</p>
  )}

  <div class="step-card-content">
    <slot />
  </div>
</article>

<style>
  .step-card {
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border-default);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: border-color 200ms ease-out, box-shadow 200ms ease-out;
    scroll-margin-top: calc(var(--header-height) + 2rem);
  }

  .step-card:hover {
    border-color: var(--color-border-strong);
  }

  /* Active State */
  .step-card--active {
    border-color: var(--color-azure-300);
    box-shadow: var(--shadow-md);
  }

  [data-theme="dark"] .step-card--active {
    border-color: var(--color-azure-700);
  }

  /* Completed State */
  .step-card--completed {
    border-color: var(--color-success);
  }

  .step-card--completed .step-card-number {
    background: var(--color-success);
    border-color: var(--color-success);
    color: white;
  }

  /* Header */
  .step-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .step-card-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-azure-500);
    color: white;
    font-size: 1.125rem;
    font-weight: 700;
    flex-shrink: 0;
    transition: background-color 200ms ease-out, transform 200ms ease-out;
  }

  .step-card:hover .step-card-number {
    transform: scale(1.05);
  }

  .step-card-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
    line-height: 1.3;
  }

  .step-card-description {
    color: var(--color-text-secondary);
    margin: 0 0 1.25rem 0;
    line-height: 1.6;
    font-size: 0.9375rem;
  }

  .step-card-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Tip styling for content */
  .step-card-content :global(.step-tip) {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    padding: 0.875rem 1rem;
    background: var(--color-azure-50);
    border: 1px solid var(--color-azure-200);
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  [data-theme="dark"] .step-card-content :global(.step-tip) {
    background: rgba(59, 130, 246, 0.1);
    border-color: var(--color-azure-800);
  }

  .step-card-content :global(.step-tip-icon) {
    flex-shrink: 0;
    font-size: 1rem;
    margin-top: 0.125rem;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .step-card {
      padding: 2rem;
    }

    .step-card-number {
      width: 44px;
      height: 44px;
      font-size: 1.25rem;
    }

    .step-card-title {
      font-size: 1.5rem;
    }

    .step-card-description {
      font-size: 1rem;
    }
  }

  @media (min-width: 1024px) {
    .step-card {
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  /* Mobile full-bleed */
  @media (max-width: 640px) {
    .step-card {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }
  }

  /* Animation */
  .step-card {
    animation: step-card-in 0.5s ease-out both;
  }

  .step-card:nth-child(1) { animation-delay: 0.1s; }
  .step-card:nth-child(2) { animation-delay: 0.2s; }
  .step-card:nth-child(3) { animation-delay: 0.3s; }
  .step-card:nth-child(4) { animation-delay: 0.4s; }

  @keyframes step-card-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .step-card {
      animation: none;
    }

    .step-card:hover .step-card-number {
      transform: none;
    }
  }
</style>
