---
/**
 * CodeBlock Component
 * 
 * Displays syntax-highlighted code with optional features like copy functionality,
 * language indicators, filename headers, and line highlighting.
 * Supports: bash, yaml, json, typescript, javascript, python, go, csharp
 */

import { Code } from 'astro:components';
import CopyButton from './CopyButton.astro';
import LanguageIndicator from './LanguageIndicator.astro';
import type { SupportedLanguage } from './LanguageIndicator.astro';

interface Props {
  /** The code content to display */
  code: string;
  /** Programming language for syntax highlighting */
  language: SupportedLanguage;
  /** Optional filename to display in header */
  filename?: string;
  /** Show line numbers */
  showLineNumbers?: boolean;
  /** Lines to highlight (1-indexed) */
  highlightLines?: number[];
  /** Show copy button */
  showCopy?: boolean;
  /** Show language indicator */
  showLanguage?: boolean;
  /** Maximum height before scrolling (CSS value) */
  maxHeight?: string;
  /** Caption text below code block */
  caption?: string;
  /** Enable word wrap */
  wordWrap?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  code,
  language,
  filename,
  showLineNumbers = false,
  highlightLines = [],
  showCopy = true,
  showLanguage = true,
  maxHeight,
  caption,
  wordWrap = false,
  class: className = '',
} = Astro.props;

// Normalize language for Shiki
const shikiLanguage = language === 'csharp' ? 'cs' : language;

// Check if header should be shown
const showHeader = showLanguage || filename || showCopy;

// Process highlight lines for the mark attribute
const markLines = highlightLines.length > 0 ? highlightLines.join(',') : undefined;

// Create aria label for accessibility
const ariaLabel = filename 
  ? `Code example from ${filename}` 
  : `Code example in ${language}`;
---

<figure 
  class:list={['code-block', className]}
  role="figure"
  aria-label={ariaLabel}
  data-language={language}
>
  {showHeader && (
    <div class="code-block-header">
      <div class="code-block-header-left">
        {showLanguage && (
          <LanguageIndicator language={language} size="sm" />
        )}
        {filename && (
          <span class="code-block-filename" aria-label={`Filename: ${filename}`}>
            {filename}
          </span>
        )}
      </div>
      {showCopy && (
        <CopyButton text={code} size="sm" label="Copy code to clipboard" />
      )}
    </div>
  )}

  <div 
    class="code-block-content"
    class:list={{
      'code-block-content--with-line-numbers': showLineNumbers,
      'code-block-content--word-wrap': wordWrap,
    }}
    style={maxHeight ? `max-height: ${maxHeight}` : undefined}
    tabindex="0"
    role="region"
    aria-label="Code content"
  >
    <Code 
      code={code.trim()} 
      lang={shikiLanguage} 
      theme="github-dark"
      wrap={wordWrap}
    />
  </div>

  {caption && (
    <figcaption class="code-block-caption">
      {caption}
    </figcaption>
  )}
</figure>

<style is:global>
  /* Code Block Container */
  .code-block {
    position: relative;
    margin: 1.5rem 0;
    border-radius: var(--code-border-radius, 0.5rem);
    overflow: hidden;
    background: var(--code-block-bg);
    border: 1px solid var(--code-header-border);
  }

  /* Header */
  .code-block-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    background: var(--code-header-bg);
    border-bottom: 1px solid var(--code-header-border);
    min-height: 40px;
  }

  .code-block-header-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 0;
  }

  .code-block-filename {
    font-family: var(--font-family-mono);
    font-size: 0.8125rem;
    color: var(--code-filename-color);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Content */
  .code-block-content {
    overflow: auto;
    position: relative;
  }

  .code-block-content:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: -2px;
  }

  .code-block-content:focus:not(:focus-visible) {
    outline: none;
  }

  /* Astro Code component overrides */
  .code-block-content pre {
    margin: 0;
    padding: var(--code-padding, 1rem);
    background: transparent !important;
    border: none;
    border-radius: 0;
    font-size: var(--code-font-size, 0.875rem);
    line-height: var(--code-line-height, 1.5);
    tab-size: 2;
  }

  .code-block-content code {
    font-family: var(--font-family-mono);
    background: transparent !important;
    padding: 0;
  }

  /* Word wrap */
  .code-block-content--word-wrap pre,
  .code-block-content--word-wrap code {
    white-space: pre-wrap;
    word-break: break-word;
  }

  /* Custom Scrollbar */
  .code-block-content::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  .code-block-content::-webkit-scrollbar-track {
    background: var(--code-scrollbar-track);
  }

  .code-block-content::-webkit-scrollbar-thumb {
    background: var(--code-scrollbar-thumb);
    border-radius: 4px;
  }

  .code-block-content::-webkit-scrollbar-thumb:hover {
    background: var(--code-scrollbar-thumb-hover);
  }

  /* Caption */
  .code-block-caption {
    padding: 0.5rem 1rem;
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
    background: var(--code-header-bg);
    border-top: 1px solid var(--code-header-border);
    text-align: center;
    font-style: italic;
  }

  /* Line highlighting - works with Shiki's highlighted lines */
  .code-block-content .line.highlighted {
    background: var(--code-line-highlight-bg);
    border-left: 3px solid var(--code-line-highlight-border);
    margin-left: -1rem;
    margin-right: -1rem;
    padding-left: calc(1rem - 3px);
    padding-right: 1rem;
    display: block;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .code-block {
      border-radius: 0;
      margin-left: calc(-1 * var(--spacing-4, 1rem));
      margin-right: calc(-1 * var(--spacing-4, 1rem));
      border-left: none;
      border-right: none;
    }

    .code-block-header {
      padding: 0.375rem 0.75rem;
    }

    .code-block-content pre {
      font-size: 13px;
      padding: 0.75rem;
    }

    .code-block-filename {
      font-size: 0.75rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .code-block,
    .code-block * {
      transition: none !important;
    }
  }
</style>
