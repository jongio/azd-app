---
/**
 * FeatureCard Component
 * 
 * Displays a feature with icon, title, description, and optional badge.
 * Used in the features grid on the landing page.
 */

interface Props {
  /** Feature icon (emoji or SVG string) */
  icon: string;
  /** Feature title */
  title: string;
  /** Feature description */
  description: string;
  /** Optional badge text (e.g., "AI", "New") */
  badge?: string;
  /** Optional link to learn more */
  href?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  icon,
  title,
  description,
  badge,
  href,
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class:list={['feature-card', { 'feature-card--link': !!href }, className]}
  href={href}
  role={href ? undefined : 'listitem'}
>
  {badge && (
    <span class="feature-card-badge">{badge}</span>
  )}
  <div class="feature-card-icon" aria-hidden="true">
    <Fragment set:html={icon} />
  </div>
  <h3 class="feature-card-title">{title}</h3>
  <p class="feature-card-description">{description}</p>
  {href && (
    <span class="feature-card-link">
      Learn more
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </span>
  )}
</Tag>

<style>
  .feature-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border-default);
    border-radius: 0.75rem;
    transition: transform 150ms ease-out, box-shadow 150ms ease-out, border-color 150ms ease-out;
  }

  @media (min-width: 768px) {
    .feature-card {
      padding: 2rem;
    }
  }

  .feature-card--link {
    text-decoration: none;
    cursor: pointer;
  }

  .feature-card--link:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-strong);
    box-shadow: var(--shadow-lg);
  }

  .feature-card--link:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: 2px;
  }

  .feature-card--link:active {
    transform: scale(0.98);
    box-shadow: var(--shadow-sm);
  }

  .feature-card-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 700;
    background-color: var(--color-mcp-badge-bg);
    color: var(--color-mcp-badge-text);
    border: 1px solid var(--color-mcp-badge-border);
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .feature-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    background-color: var(--color-azure-50);
    border-radius: 0.5rem;
    color: var(--color-interactive-default);
  }

  :global([data-theme="dark"]) .feature-card-icon,
  :global(:root:not([data-theme="light"])) .feature-card-icon {
    background-color: rgba(59, 130, 246, 0.15);
  }

  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme="light"])) .feature-card-icon {
      background-color: rgba(59, 130, 246, 0.15);
    }
  }

  @media (min-width: 768px) {
    .feature-card-icon {
      width: 3rem;
      height: 3rem;
      font-size: 1.75rem;
    }
  }

  .feature-card-icon :global(svg) {
    width: 1.5rem;
    height: 1.5rem;
  }

  .feature-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  @media (min-width: 768px) {
    .feature-card-title {
      font-size: 1.25rem;
    }
  }

  .feature-card-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    flex: 1;
    margin: 0;
  }

  .feature-card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-interactive-default);
    transition: gap 150ms ease-out;
  }

  .feature-card--link:hover .feature-card-link {
    gap: 0.5rem;
  }

  .feature-card-link svg {
    width: 1rem;
    height: 1rem;
    transition: transform 150ms ease-out;
  }

  .feature-card--link:hover .feature-card-link svg {
    transform: translateX(2px);
  }

  /* Animation on scroll */
  .feature-card {
    animation: feature-card-in 0.5s ease-out both;
  }

  @keyframes feature-card-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animation delays */
  .feature-card:nth-child(1) { animation-delay: 0.1s; }
  .feature-card:nth-child(2) { animation-delay: 0.15s; }
  .feature-card:nth-child(3) { animation-delay: 0.2s; }
  .feature-card:nth-child(4) { animation-delay: 0.25s; }
  .feature-card:nth-child(5) { animation-delay: 0.3s; }
  .feature-card:nth-child(6) { animation-delay: 0.35s; }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .feature-card {
      animation: none;
      transition: opacity 0.1s ease-out;
    }

    .feature-card--link:hover {
      transform: none;
    }

    .feature-card--link:active {
      transform: none;
    }

    .feature-card-link svg {
      transition: none;
    }
  }
</style>
