---
/**
 * DashboardDemo Component
 * 
 * Displays a screenshot of the azd app dashboard showing running services.
 * Uses an actual screenshot for authenticity.
 */

interface Props {
  /** Custom class name */
  class?: string;
}

const { class: className = '' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<figure 
  class:list={['dashboard-demo', className]}
  role="figure"
  aria-label="azd app dashboard showing running services"
>
  <img 
    src={`${baseUrl}screenshots/dashboard.png`}
    alt="azd app dashboard showing 4 healthy services (web, api, postgres, redis) with live logs"
    class="dashboard-screenshot"
    loading="lazy"
    decoding="async"
  />
</figure>

<style>
  .dashboard-demo {
    width: 100%;
    max-width: 560px;
    margin: 0;
  }

  .dashboard-screenshot {
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
    box-shadow: var(--shadow-xl);
    border: 1px solid var(--color-border-default);
  }

  /* Mobile */
  @media (max-width: 640px) {
    .dashboard-demo {
      max-width: 100%;
    }
  }
</style>
